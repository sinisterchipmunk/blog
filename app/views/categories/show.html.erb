<%content_for :subtitle do%>
  <%=@category.name%>
<%end%>
<%content_for :extra_info do%>
  <%=@posts.length%> post<%=(@posts.length != 1 ? 's' : '')%><br/>
  <%if permitted_to? :create, :posts%>
    <%=link_to_new_post_with_categories(@new_post_for_category)%>
  <%end%>
<%end%>

<%@posts.each do |post|%>
  <%=render :partial => 'posts/post', :locals => { :post => post, :brief => post == @posts.first }%>
<%end%>
