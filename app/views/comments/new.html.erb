<%content_for :subtitle do%>Leave a Comment<%end%>

<% form_for(@comment, :url => post_comments_path(@post)) do |f| %>
  <%= f.error_messages %>

  <%= f.hidden_field :author_id %>
  <%= f.hidden_field :post_id %>
  
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, :style => "width:7.85in;" %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', @post %>
