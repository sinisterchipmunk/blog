<%content_for :subtitle do%>
  Archive for <%=@date.strftime("%B")%> <%=@date.strftime("%Y")%>
<%end%>
<%content_for :extra_info do%>
  <%=@posts.length%> post<%=(@posts.length != 1 ? 's' : '')%>
<%end%>

<%@posts.each do |post|%>
  <%=render :partial => 'posts/post_in_list', :locals => { :post => post }%>
<%end%>
